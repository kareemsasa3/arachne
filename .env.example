# Scraper Service Environment Variables
# Copy this file to .env and customize as needed

# API Configuration
SCRAPER_API_PORT=8080

# Redis Configuration
SCRAPER_REDIS_ADDR=redis:6379
SCRAPER_REDIS_PASSWORD=
SCRAPER_REDIS_DB=0

# Scraping Configuration
SCRAPER_MAX_CONCURRENT=5
SCRAPER_REQUEST_TIMEOUT=10s
SCRAPER_TOTAL_TIMEOUT=30s
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_RETRY_DELAY=1s

# Circuit Breaker Configuration
SCRAPER_CIRCUIT_BREAKER_THRESHOLD=3
SCRAPER_CIRCUIT_BREAKER_TIMEOUT=30s

# Logging and Monitoring
SCRAPER_ENABLE_LOGGING=true
SCRAPER_LOG_LEVEL=info
SCRAPER_ENABLE_METRICS=true

# Scraping Behavior
SCRAPER_USE_HEADLESS=false
SCRAPER_MAX_PAGES=10
SCRAPER_USER_AGENT=Go-Scraper/2.0

# Output Configuration
SCRAPER_OUTPUT_FILE=scraping_results.json
